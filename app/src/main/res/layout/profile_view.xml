<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#212121"
    >

    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:text="TextView"
        android:textColor="#f5f5f5"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/dbg"
        android:layout_width="180dp"
        android:layout_height="95dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:gravity="center"
        android:text="O+"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:textColor="@android:color/holo_red_light"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/profileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="123dp"
        android:text="Appel Mahmud Akib"
        android:textColor="#f5f5f5"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/address"
        android:layout_width="255dp"
        android:layout_height="31dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="238dp"
        android:gravity="center"
        android:text="maddhya ajompur,Uttara,Dhaka-1230"
        android:textColor="#f5f5f5"
        android:textSize="22sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="226dp"
        android:gravity="center"
        android:text="Phone: "
        android:textColor="#f5f5f5"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="184dp"
        android:gravity="center"
        android:text="01719717528"
        android:textColor="#f5f5f5"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/donationDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="199dp"
        android:gravity="center"
        android:text="Last Donation: 28/07/18"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/callBtn"
        android:layout_width="124dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="125dp"
        android:text="Call"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="22sp" />

    <Button
        android:id="@+id/updateBtn"
        android:layout_width="124dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="36dp"
        android:layout_toEndOf="@+id/age"
        android:text="Update"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="22sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/deleteBtn"
        android:layout_width="124dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/updateBtn"
        android:layout_marginStart="24dp"
        android:text="Delete"
        android:textColor="@android:color/holo_red_light"
        android:textSize="22sp"
        android:textStyle="bold" />


</RelativeLayout>