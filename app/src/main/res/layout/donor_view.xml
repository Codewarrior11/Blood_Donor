<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#616161"
    >

    <TextView
        android:id="@+id/blood_group"
        android:layout_width="71dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="O+"
        android:textColor="#d50000"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/donorname"
        android:layout_width="177dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/blood_group"
        android:layout_marginStart="82dp"
        android:text="Appel Mahmud Akib"
        android:textColor="#e0e0e0"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/donoraddress"
        android:layout_width="180dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/blood_group"
        android:layout_alignStart="@+id/donorname"
        android:text="Dhaka"
        android:textColor="#e0e0e0"
        android:textSize="18sp" />

    <Button
        android:id="@+id/call"
        android:layout_width="98dp"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/blood_group"
        android:layout_marginEnd="13dp"
        android:text="call" />

    <Button
        android:id="@+id/viewfullprofile"
        android:layout_width="98dp"
        android:layout_height="38dp"
        android:layout_alignStart="@+id/call"
        android:layout_below="@+id/donorname"
        android:text="View Profile" />



</RelativeLayout>